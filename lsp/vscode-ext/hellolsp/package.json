{
	"name": "hellolsp",
	"displayName": "hellolsp",
	"description": "hellolsp",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.55.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:mydsl"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "mydsl",
				"aliases": [
					"mydsl"
				],
				"extensions": [
					"mydsl"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "mydsl",
				"scopeName": "text.mydsl",
				"path": "./syntaxes/mydsl.tmLanguage.json"
			}
		]		
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/vscode": "^1.55.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"glob": "^7.1.6",
		"mocha": "^10.1.0",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	}
}
